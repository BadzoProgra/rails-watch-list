<h1><%= @list.name %></h1>

<ul>
  <li>Name: <strong><%= @list.name %></strong></li>
</ul>


<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %><%= bookmark.movie.title %><%= link_to "Remove",
        bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to 'Back', lists_path %>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>